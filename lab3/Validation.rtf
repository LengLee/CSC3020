package Validation;

/*
 *
 * @author LengLee
 */
public class ClassV {
    
    private double fleg; 
    private double sleg; 
    private double hy; 
    
    public ClassV(){
        fleg = 0.0; 
        sleg=0.0;
        hy=0.0; 
    }
    
    public ClassV(double f, double s, double h){
        fleg = f;
        sleg = s; 
        hy=h; 
    }
    
    public void setLegs(double f, double s, double h){
        fleg = f; 
        sleg= s; 
        hy = h; 
    }
    public double getFleg(){
        return fleg; 
    }
    public double getSleg(){
        return sleg; 
    }
    public double getHy(){
        return hy; 
    }
    
    public boolean verify(){
        return (fleg*fleg)+(sleg*sleg)==(hy*hy); 
    }
           
    
            
    
}

